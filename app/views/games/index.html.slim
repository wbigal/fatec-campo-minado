.container
  .row
    h1.col-lg-9 Campo Minado
    .col-lg-4
      #board-area
        = render 'board_area'
    .col-lg-4
      h2 Pontuação
      div
        | Sua pontuação
        | &nbsp;
        span#player-score
          = @player.present? ? @player.score : '...'
      h2 Os 10 melhores
      #top-ten-players

= content_for(:stylesheet) do
    = stylesheet_link_tag 'rounds/items/targeted', 'games'

= content_for(:js) do
    = javascript_include_tag 'cable', 'channels/round', 'rounds/items/targeted', 'games'
